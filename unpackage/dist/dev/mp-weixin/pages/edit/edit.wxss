
.box {
		display: flex;
		flex-direction: column;
		justify-content: center;
}
.top {
		display: flex;
		justify-content: space-between;
		margin-top: 50px;
}
.top image {
		width: 30px;
		height: 30px;
}
.title {
		width: 90%;
		margin-top: 20px;
		margin-left: 20px;
		font-size: 30px;
}
.example-body {
		width: 90%;
		display: flex;
		flex-direction: row;
		margin-left: 20px;
		margin-top: 10px;
		margin-bottom: 10px;
		line-height: 1.5em;
		font-size: 10px;
		color: #bfbfbf;
		z-index: 100;
}
.example-body text {
		margin-right: 5px;
}
.ql-container {
		width: 90%;
		height: 600px;
		left: 20px;
}
.bottom {
		width: 100%;
		position: absolute;
		bottom: 0;
}
.btn {
		display: flex;
		flex-direction: column;
		margin: 10px;
}
.btn image {
		width: 30px;
		height: 30px;
}
.btn span {
		width: 30px;
		text-align: center;
		font-size: 10px;
		color: #242424;
}
